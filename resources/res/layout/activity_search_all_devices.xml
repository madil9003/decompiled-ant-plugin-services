<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Searching for [type] devices..."/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            style="?android:attr/progressBarStyleLarge"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/button_SearchAgain"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Search Again"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="2"/>
        <RelativeLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imageView_ProxIcon"
                android:layout_width="140dp"
                android:layout_height="85dp"
                android:src="@drawable/proximity_icon"/>
            <TextView
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/textView_ProxValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="20dp"
                android:text="3"
                android:layout_alignLeft="@+id/imageView_ProxIcon"
                android:layout_alignTop="@+id/imageView_ProxIcon"/>
            <TextView
                android:textSize="55dp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:id="@+id/textView_ProxOffLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:text="OFF"
                android:layout_alignLeft="@+id/imageView_ProxIcon"
                android:layout_alignTop="@+id/imageView_ProxIcon"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView_AlreadyConnectedTitle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Connected Devices:"/>
    <ListView
        android:id="@+id/listView_AlreadyConnectedDevices"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView_FoundDeviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devices Found In Search:"/>
    <ListView
        android:id="@+id/listView_FoundDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
