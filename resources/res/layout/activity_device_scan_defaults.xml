<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Scan Defaults:"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The values here will be used in the scan search that searches for new devices (applications may choose to override these defaults)."/>
    <ListView
        android:id="@+id/listView_settingsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
